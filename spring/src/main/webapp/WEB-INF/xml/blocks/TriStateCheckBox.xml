<!DOCTYPE block SYSTEM "../dtds/blockLibrary.dtd">
	<!-- TriCheckBox is an editable check box control with the structure: "[] caption". It supports
		three states - On, Off and Unknown -->
	<block name="TriStateCheckBox" inherits="BaseView">
		<definition>
			<!-- The caption to appear to the right of the field value. -->
			<property name="caption" type="String" />

			<!-- The name of the model property that will supply the value. -->
			<property name="valueField" type="String" />
		</definition>
		<assignments>
			<property name="layoutClass">mstr.layouts.TriStateCheckBox</property>
			<property name="cssClass">TriStateCheckBox</property>
			<property name="cmds">SingleSelectNextAndLoop||model</property>
		</assignments>
	</block>
