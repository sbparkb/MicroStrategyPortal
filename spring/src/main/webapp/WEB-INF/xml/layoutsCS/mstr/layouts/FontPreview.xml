<mstrlayout:layout xmlns:mstrlayout="http://microstrategy.com/web/2008/CSLAYOUT"
    on_set_enabled="mstr.behaviors.FontPreview.on_set_enabled(rootTag, view.get('enabled'));"
    on_set_visible="mstr.behaviors.Generic.set_css_display(rootTag, 'block', 'none', view.props['visible'])"
    on_model_set_--fontFamily--="mstr.behaviors.FontPreview.on_model_set_prop(rootTag, 'fontFamily', view, model);"
    on_model_set_--fontSize--="mstr.behaviors.FontPreview.on_model_set_prop(rootTag, 'fontSize', view, model);"
    on_model_set_--boldItalic--="mstr.behaviors.FontPreview.on_model_set_prop(rootTag, 'boldItalic', view, model);"
    on_model_set_--textUnderline--="mstr.behaviors.FontPreview.on_model_set_prop(rootTag, 'textUnderline', view, model);"
    on_model_set_--textStrikeout--="mstr.behaviors.FontPreview.on_model_set_prop(rootTag, 'textStrikeout', view, model);"
    on_model_set_--fontColor--="mstr.behaviors.FontPreview.on_model_set_prop(rootTag, 'fontColor', view, model);">
	<div class="{@cssPrefix}{@cssClass}" style="{@cssText}">
		<div class="{@cssPrefix}{@cssClass}Caption">{@caption}</div>
		<div class="{@cssPrefix}{@cssClass}Text">{@text}</div>
	</div>
</mstrlayout:layout>