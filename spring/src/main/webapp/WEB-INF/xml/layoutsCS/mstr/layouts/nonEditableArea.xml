<mstrlayout:layout xmlns:mstrlayout="http://microstrategy.com/web/2008/CSLAYOUT"
    on_set_visible="mstr.behaviors.Generic.set_css_display(rootTag, 'block', 'none', view.props['visible'])"
    on_model_set_value="rootTag.value = model.get('value') &amp;&amp; model.get('value').length != 0 ? model.get('value'):'';"
    on_model_set_mode="rootTag.style.display=((model.get('mode') != 'edit')? 'block':'none');">
      <textarea id="{@id}" style="{@cssText}"
       class="{@cssPrefix}{@cssClass}" readonly="true">
  </textarea>
</mstrlayout:layout>
