<!DOCTYPE block SYSTEM "../dtds/blockLibrary.dtd">
	<block name="ToolbarColorPickerModel" inherits="ToolbarControlModel,ColorPickerModel">
		<definition>
			<!-- The last color selected (or the initial color if no selections). -->
			<property name="lastColor" type="String" />

			<!-- An optional tooltip used by the ToolbarPickerButton that renders this model. -->
			<property name="tooltip" type="String" />
		</definition>
		<assignments>
			<property name="type">COLORPICKER</property>
			<property name="valueForm">dssid</property>
			<property name="selectedIndicesList">0</property>
			<property name="lastColor">#000000</property>
			<property name="toolbarHelper">
				<block name="ToolbarColorPickerHelper" />
			</property>
		</assignments>
	</block>
