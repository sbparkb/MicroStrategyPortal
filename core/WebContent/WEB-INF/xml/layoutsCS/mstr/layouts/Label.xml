<mstrlayout:layout xmlns:mstrlayout="http://microstrategy.com/web/2008/CSLAYOUT"
	on_model_set_--valueField--="mstr.behaviors.Controls.on_model_set_value(view, model, rootTag.childNodes[1]);"
    on_set_visible="mstr.behaviors.Generic.set_css_display(rootTag, 'block', 'none', view.props['visible'])">
  <div class="{@cssPrefix}{@cssClass}"
       id="{@id}"
	   title="{@tooltip}"
	   style="{@cssText}"
	>
    <span class="{@cssPrefix}{@cssClass}Caption">{@caption} </span> <span class="{@cssPrefix}{@cssClass}Value"></span>
  </div>
</mstrlayout:layout>
