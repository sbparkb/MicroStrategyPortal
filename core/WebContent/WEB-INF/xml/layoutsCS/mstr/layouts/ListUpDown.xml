<mstrlayout:layout xmlns:mstrlayout="http://microstrategy.com/web/2008/CSLAYOUT"
    on_set_visible="mstr.behaviors.Generic.set_css_display(rootTag, 'block', 'none', view.props['visible'])">
  <table cellspacing="0"
         style="{@cssText}"
         cellpadding="0"
         class="{@cssPrefix}{@cssClass}"
         id="{@id}">
    <tbody>
      <tr>
        <td>
          	<span>
          		<label>
            	{@caption} {@width}
          		</label>
        	</span>
        </td>
      </tr>
      <tr>
        <td class="{@cssPrefix}{@cssClass}CellAvailableView">
          <table cellspacing="0" cellpadding="0" style="table-layout:fixed;"><tr><td>
          <mstrlayout:wRender name="availableView">
            {@descriptors/loading}
          </mstrlayout:wRender>
          </td></tr></table>
        </td>
        <td class="{@cssPrefix}{@cssClass}CellUpDownButtons">
          <mstrlayout:wRender name="upButton">
          </mstrlayout:wRender>
          <mstrlayout:wRender name="downButton">
          </mstrlayout:wRender>
        </td>
      </tr>
    </tbody>
  </table>
</mstrlayout:layout>
